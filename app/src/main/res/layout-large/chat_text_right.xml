<?xml version="1.0" encoding="utf-8"?>

<!-- <merge xmlns:android="http://schemas.android.com/apk/res/android"> -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/back_date"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/back"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:background="@color/app_chat_notification_bg"
        android:focusable="false"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="13dip"
        android:paddingRight="13dip"
        android:paddingTop="3dp"
        android:text="Small Text"
        android:textAllCaps="true"
        android:textColor="@color/app_color_dark_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_chat_notification_bg"
        android:focusable="false"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text="sdfsdff"
        android:textColor="@color/app_color_dark_gray"
        android:textSize="12sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#BFD1F5F8"
        android:orientation="vertical"
        android:paddingRight="3dp"
        android:paddingTop="1dp" >

        <FrameLayout
            android:id="@+id/ff_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp" >

            <TextView
                android:id="@+id/timer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="56dp"
                android:layout_marginTop="20dp"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingLeft="7dp" >
            </LinearLayout>

            <com.wifin.kachingme.emojicons.emojicon.EmojiconTextView
                android:id="@+id/txt_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="65dp"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:gravity="right"
                android:text="hi hellooo"
                android:textColor="@color/black"
                android:textSize="23sp"
                emojicon:emojiconSize="25sp" />

            <com.wifin.kachingme.util.RounderImageView
                android:id="@+id/img_avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:focusable="false"
                android:src="@drawable/ic_launcher2" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:paddingRight="20dp" >

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:focusable="false"
                android:src="@drawable/receipt_from_target" />

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="45dp"
                android:focusable="false"
                android:text="12:12AM"
                android:textColor="@color/app_color_dark_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="40dp"
                android:focusable="false"
                android:text="profile name"
                android:textColor="@color/app_color_dark_gray"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout> <!-- </LinearLayout> -->


<!-- </merge> -->
