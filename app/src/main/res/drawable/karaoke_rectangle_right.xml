<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:color="@color/white" ><shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- view background color -->
        <solid
            android:color="@color/accent_500" >
        </solid>

        <!-- view border color and width -->
        <stroke
            android:width="1dp"
            android:color="@color/accent_500" >
        </stroke>

        <!-- If you want to add some padding -->
        <padding
            android:left="1dp"
            android:top="1dp"
            android:right="1dp"
            android:bottom="1dp"    >
        </padding>

        <!-- Here is the corner radius -->
        <corners
            android:topRightRadius="3dp"  android:bottomRightRadius="3dp"  >
        </corners>

    </shape></item>

    <item android:color="@color/accent_500"><shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- view background color -->
        <solid
            android:color="@color/white" >
        </solid>

        <!-- view border color and width -->
        <stroke
            android:width="1dp"
            android:color="@color/accent_500" >
        </stroke>

        <!-- If you want to add some padding -->
        <padding
            android:left="1dp"
            android:top="1dp"
            android:right="1dp"
            android:bottom="1dp"    >
        </padding>

        <!-- Here is the corner radius -->
        <corners
            android:topRightRadius="3dp"  android:bottomRightRadius="3dp"  >
        </corners>

    </shape></item>
</selector>
