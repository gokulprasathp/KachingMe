<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/white" android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- view background color -->
            <solid android:color="@color/accent_500"></solid>

            <!-- view border color and width -->
            <stroke android:width="1dp" android:color="@color/accent_500"></stroke>

            <!-- If you want to add some padding -->
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>

            <!-- Here is the corner radius -->
            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp"></corners>

        </shape>
    </item>

    <item android:color="@color/accent_500">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- view background color -->
            <solid android:color="@color/white"></solid>

            <!-- view border color and width -->
            <stroke android:width="1dp" android:color="@color/accent_500"></stroke>

            <!-- If you want to add some padding -->
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>

            <!-- Here is the corner radius -->
            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp"></corners>

        </shape>
    </item>
</selector>
