<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/app_color_blue" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/app_color_gray" />

        <TextView
            android:id="@+id/btn_edit_subjects"
            style="@drawable/image_button_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_content_edit" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/recipients"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/app_color_blue"
        android:textSize="12sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/app_color_blue" />

    <ListView
        android:id="@+id/list_experience"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:divider="@color/list_devider"
        android:dividerHeight="1px" >
    </ListView>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FE0000"
        android:text="@string/delete_broadcast_list"
        android:textColor="@color/white" />

</LinearLayout>
