<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/primary_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="primary"
            android:textColor="#000" />

        <LinearLayout
            android:id="@+id/s_numlay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sec_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="secondarynumber"
                android:textColor="#000" />

            <Button
                android:id="@+id/sub_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FE0000"
                android:text="Delete" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/s_numlay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sec_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="secondarynumber"
                android:textColor="#000" />

            <Button
                android:id="@+id/sub_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FE0000"
                android:text="Delete" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/s_numlay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sec_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="secondarynumber"
                android:textColor="#000" />

            <Button
                android:id="@+id/sub_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FE0000"
                android:text="Delete" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/s_numlay4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sec_number4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="secondarynumber"
                android:textColor="#000" />

            <Button
                android:id="@+id/sub_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FE0000"
                android:text="Delete" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>