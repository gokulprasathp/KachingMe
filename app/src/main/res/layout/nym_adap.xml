<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lym_adap_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lym_mess_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FE0000"
            android:gravity="center"
            android:text="Offer"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lym_abbre_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrip"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/lym_edit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pencil43" />

    <ImageView
        android:id="@+id/lym_del_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete96" />

</LinearLayout>