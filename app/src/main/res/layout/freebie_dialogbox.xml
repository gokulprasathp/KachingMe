<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/freebieDialog_Text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/freebieDialog_Text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/freebieDialog_Text3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/freebieDialog_agreeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/freebieDialog_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector_gray_to_red"
            android:text="Decline"
            android:textColor="@color/gray_to_red_selector" />

        <TextView
            android:id="@+id/freebieDialog_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector_gray_to_red"
            android:text="Agree"
            android:textColor="@color/gray_to_red_selector" />

    </LinearLayout>

</LinearLayout>