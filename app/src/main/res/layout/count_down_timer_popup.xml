<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/relative_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.wifin.kachingme.util.CircleProgressBar
            android:id="@+id/popup_custom_progressBar_adapter"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:progressBarThickness="12dp" />

        <TextView
            android:id="@+id/popup_tvCounter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignBottom="@id/popup_custom_progressBar_adapter"
            android:layout_alignLeft="@id/popup_custom_progressBar_adapter"
            android:layout_alignRight="@id/popup_custom_progressBar_adapter"
            android:layout_alignTop="@id/popup_custom_progressBar_adapter"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="35dp" />
    </FrameLayout>

</LinearLayout>