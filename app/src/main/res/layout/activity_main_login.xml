<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Ka_headlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Ka_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:background="@drawable/ic_launcher33" />

        <ImageView
            android:id="@+id/back_logo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/arrow"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/Ka_newlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:background="@drawable/kaching_img" />

        <TextView
            android:id="@+id/Ka_headtext"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="KaChing.me"
            android:textColor="#696969"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/right_headtext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="right"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/Ka_nexttext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Next"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/Ka_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:background="@drawable/cartwhite"
            android:gravity="right"
            android:visibility="invisible">

            <TextView
                android:id="@+id/button_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/zcircle"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/header_cart_txt_color"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Ka_datalayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/foot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/screen" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#FE0000" />

    <LinearLayout
        android:id="@+id/m_slider_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/m_chatlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/m_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/selectorfornewchat" />

            <TextView
                android:id="@+id/m_chattxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="@drawable/whitetoblack"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/m_bugslay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/m_bugs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/selectorfornewbux" />

            <TextView
                android:id="@+id/m_bugstxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BuxS"
                android:textColor="@drawable/whitetoblack"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/m_contlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/m_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/buy7" />

            <TextView
                android:id="@+id/m_conttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deel"
                android:textColor="@drawable/whitetoblack"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/m_settlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/m_setcount_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:background="@drawable/selectorfornewcart"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/m_setcount_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:background="@drawable/z_circle"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/header_cart_txt_color"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/m_setttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textColor="@drawable/whitetoblack"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>