<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDataUsageItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/linearCardUsage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearCardUsageItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearUsageSent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUsageSentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usage Sent"
                    android:textColor="@color/title_txt_notification" />

                <TextView
                    android:id="@+id/tvUsageSentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0B"
                    android:textColor="@color/title_txt_notification" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearUsageReceived"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUsageReceivedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usage Received"
                    android:textColor="@color/title_txt_notification" />

                <TextView
                    android:id="@+id/tvUsageReceivedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0B"
                    android:textColor="@color/title_txt_notification" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

    </LinearLayout>

</android.support.v7.widget.CardView>