<?xml version="1.0" encoding="utf-8"?><!--
     <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/group_info_bg">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_action_social_group_red" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Medium Text"
                android:textColor="@color/app_color_blue"
                android:textStyle="bold"
                android:maxLength="20"/>

            <TextView
                android:id="@+id/txt_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha=".7"
                android:text="Medium Text"
                android:textColor="@color/app_color_blue" />
        </LinearLayout>

        <View
            android:id="@+id/edit_btn_seperator"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/bold_header" />

        <TextView
            android:id="@+id/btn_edit_subjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/group_edit" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/group_info_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/group_info_bg"
            android:text="Members"
            android:textColor="@color/app_color_blue"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"

        android:background="@color/white" />

    <ListView
        android:id="@+id/list_experience"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:divider="@color/list_devider"
        android:dividerHeight="1px"></ListView>

    <TextView
        android:id="@+id/btn_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_gray_to_red"
        android:text="@string/delete_n_exit_group"

        android:textColor="@drawable/nymn_selector" />

</LinearLayout><!-- </ScrollView> -->
