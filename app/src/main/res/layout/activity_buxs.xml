<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/buxs_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:orientation="horizontal">

        <com.wifin.kachingme.util.RounderImageView
            android:id="@+id/profile_img1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/buxs_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/remaining_buxs_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bux_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BuxS"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/bux_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/red"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/donated_buxs_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/donated_buxs_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donated"
                    android:textColor="@color/dim_gray" />

                <TextView
                    android:id="@+id/donated_buxs_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/dim_gray"
                    android:text=""
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buxs_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_buxs_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_border_background"
            android:text="My BuxS" />

        <TextView
            android:id="@+id/donate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donate" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/donation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/num_of_buxs_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num_of_buxs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No of Points"
                android:textColor="@color/dim_gray" />

            <EditText
                android:id="@+id/enter_bux"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_border_background"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/donate_contact_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/donate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donate to"
                android:textColor="@color/dim_gray" />

            <TextView
                android:id="@+id/contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/red_border_background"
                android:gravity="center"
                android:text="Contacts"
                android:textColor="@color/red" />
        </LinearLayout>

        <TextView
            android:id="@+id/donation_counter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donation Counter"
            android:textColor="@color/dim_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_counter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_counter_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Activity Counter"
            android:textColor="@color/dim_gray" />

        <TextView
            android:id="@+id/earned_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/wild_gray"
            android:text="Earned"
            android:textColor="@color/dim_gray" />

        <LinearLayout
            android:id="@+id/activity_buxs_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_gray_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textColor="@color/bold_header" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/wild_gray"></View>

            <TextView
                android:id="@+id/buxs_activity_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BuxS for Activity"
                android:textColor="@color/bold_header" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/wild_gray"></View>

            <TextView
                android:id="@+id/earned_buxs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Earned BuxS"
                android:textColor="@color/bold_header" />


        </LinearLayout>

        <ListView
            android:id="@+id/bux_activity_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:id="@+id/activity_buxs_listView"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/donation_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/date_pick_text"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="date"
            android:textColor="#fff" />

        <View
            android:id="@+id/donate_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/wild_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/donate_no_record"
            android:text="No Records Available"
            android:layout_margin="10dp"
            android:gravity="center"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/donation_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/wild_gray"/>

        <LinearLayout
            android:id="@+id/sum_buxs_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/sum_of_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Creit : "
                android:textColor="@color/description_color" />

            <TextView
                android:id="@+id/sum_of_debit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Debit : "
                android:textColor="@color/description_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>