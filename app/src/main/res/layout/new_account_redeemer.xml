<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newAccount_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please enter correct information below:"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/newAccount_shopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeemer Name"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAccount_shopNameEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />

            <TextView
                android:id="@+id/newAccount_emailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Id"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAccount_emailIdEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />

            <TextView
                android:id="@+id/newAccount_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="#000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newAccount_country_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:focusable="false"
                    android:text=""
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/newAccount_seperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/newAccount_phonenumberEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:hint=""
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="15"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/color_cursor" />

            </LinearLayout>

            <TextView
                android:id="@+id/newAccount_addressLine1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 1"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAccount_addressLine1Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />

            <TextView
                android:id="@+id/newAccount_addressLine2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 2"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAccount_addressLine2Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />

            <TextView
                android:id="@+id/newAccount_addressLine3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address 3"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAccount_addressLine3Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint=""
                android:imeOptions="actionNext"
                android:inputType="text"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />

            <TextView
                android:id="@+id/newAccount_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAccount_cityEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint=""
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />

            <TextView
                android:id="@+id/newAccount_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAccount_stateEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint=""
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />

            <TextView
                android:id="@+id/newAccount_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAccount_countryEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint=""
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />

            <TextView
                android:id="@+id/newAccount_postalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postal Code"
                android:textColor="#000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/newAccount_postalCodeEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/color_cursor" />

            <Button
                android:id="@+id/newAccount_submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_border_background"
                android:text="Redeem"
                android:textColor="@color/red" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>