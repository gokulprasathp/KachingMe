<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dic_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/dic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="NynM Dictionary"
            android:textColor="#000"
            android:textSize="13dp"
            android:textStyle="italic|bold" />

        <ImageView
            android:id="@+id/dic_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/lymsadd"
            android:gravity="center"
            android:text="Add Nyms"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/dic_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:onClick="quickScroll"
                android:text="aaaa"
                android:textColor="#000"
                android:textSize="13dp"
                android:textStyle="italic|bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:onClick="quickScroll"
                android:text="bbbb"
                android:textColor="#000"
                android:textSize="13dp"
                android:textStyle="italic|bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:onClick="quickScroll"
                android:text="ccc"
                android:textColor="#000"
                android:textSize="13dp"
                android:textStyle="italic|bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" --><!--     android:layout_width="fill_parent" --><!--     android:layout_height="fill_parent" --><!--     android:orientation="vertical" > -->

