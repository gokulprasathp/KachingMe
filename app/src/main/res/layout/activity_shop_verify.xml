<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="header"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/profile_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shopimg_bg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/prof_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/merchant_website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/freebie_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_style_gray"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/freebie_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:id="@+id/freebie_valueView"/>
                <TextView
                    android:id="@+id/freebie_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="freebie"
                    android:textColor="#000"
                    android:textStyle="bold" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/radio_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/new_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiobutton_selector"
                    android:checked="true"
                    android:padding="5dp"
                    android:text="New Account" />

                <RadioButton
                    android:id="@+id/existing_radio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiobutton_selector"
                    android:padding="5dp"
                    android:text="Existing Account" />
            </RadioGroup>

            <TextView
                android:id="@+id/shop_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Shop Name"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/shop_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:hint="Shop Name"
                android:textColor="#000"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/shop_name_drop_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Redeemer Address"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/address_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="Address Line1"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/new_account_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/redeemer_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Redeemer Name"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/redeemer_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:hint="Redeemer Name" />

                <TextView
                    android:id="@+id/address_line1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Redeemer Address"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address_line1_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:hint="Address Line1" />

                <TextView
                    android:id="@+id/address_line2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Redeemer Address"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address_line2_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:hint="Address Line2" />

                <TextView
                    android:id="@+id/address_city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="City"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address_city_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:hint="City" />

                <TextView
                    android:id="@+id/address_state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="State"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address_state_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:hint="State" />

                <TextView
                    android:id="@+id/address_country_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Country"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address_country_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:hint="Country" />

                <TextView
                    android:id="@+id/address_pincode_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="PinCode"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/address_pincode_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:hint="Pincode" />
            </LinearLayout>

            <TextView
                android:id="@+id/shop_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Redeemer Id"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/shop_id_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="Redeemer Id"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/shop_id_drop_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/email_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Email Id"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/email_id_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:hint="Email Id"
                android:visibility="gone" />

            <TextView
                android:id="@+id/underline_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:clickable="true"
                android:textColor="#000"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/verifyShop_existingAccouutLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/verifyShop_existingAccouut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:text="Existing Redeemer"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/verifyShop_buttonExistingAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:background="@drawable/button_selector_white_to_gray"
                    android:text="Click Here" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/verifyShop_newAccouutLayout"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/verifyShop_newAccouut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:text="New Redeemer"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/verifyShop_buttonNewAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:background="@drawable/button_selector_white_to_gray"
                    android:text="Click Here" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/clean_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selectorforclick"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/send_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/selectorforclick"
                    android:text="Send" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>