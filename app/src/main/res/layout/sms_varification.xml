<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/txt_sms_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/app_color_dark_gray"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/txt_varification_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="phone"
        android:textCursorDrawable="@drawable/color_cursor" />

    <ImageView
        android:id="@+id/sms_verfication_logo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_launcher33" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:text="@string/varification_note"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/red" />

</LinearLayout>