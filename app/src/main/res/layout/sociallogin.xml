<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/social_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        android:src="@drawable/ic_launcher33" />

    <android.support.v4.view.ViewPager
        android:id="@+id/social_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent" />

    <EditText
        android:id="@+id/mailedit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_style"
        android:hint="Enter email Id"
        android:paddingLeft="3dp"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="20dp" />

    <View
        android:id="@+id/mailview"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="10dp"
        android:background="@color/app_color_blue" />

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        android:layout_marginTop="10dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signin"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="6dp"
        android:textSize="18dp" />

    <Button
        android:id="@+id/signout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:background="@drawable/selectorforclick"
        android:text="Logout From Google"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/next"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:background="@drawable/selectorforclick"
        android:text="Continue"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/social_indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:padding="10dip"
        app:fillColor="@color/app_color_blue"
        app:pageColor="@color/app_color_dark_gray"
        app:radius="5dp" />

</LinearLayout>