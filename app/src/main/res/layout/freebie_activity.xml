<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kaching_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/freebie_headtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Freebie"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/freebie_nexttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="@color/white_to_gray_selector"
            android:textStyle="bold"
            android:visibility="visible" />
    </FrameLayout>

    <ListView
        android:id="@+id/Ka_start_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="#00000000" />

    <View
        android:id="@+id/startUp_bottomView"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/red_bottom"
        android:visibility="gone" />

</LinearLayout>