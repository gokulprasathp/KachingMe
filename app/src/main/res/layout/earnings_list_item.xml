<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pallete"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/prof_lay"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <com.wifin.kachingme.util.RounderImageView
                android:id="@+id/profile_pic_earn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/pepsi" />

            <TextView
                android:id="@+id/age_text_earn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="25 Years"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_earn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Massion Cryptogram"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_earn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Android programmatically include layout (i.e. without XML) ... In my current implementation,"
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>