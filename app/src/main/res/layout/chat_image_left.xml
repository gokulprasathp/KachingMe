<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_chat_notification_bg"
        android:focusable="false"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text="sdfsdff"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/app_color_dark_gray"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/back_date"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/back"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        android:background="@color/app_chat_notification_bg"
        android:focusable="false"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text="Small Text"
        android:textAllCaps="true"
        android:textColor="@color/app_color_dark_gray"
        android:textSize="11sp" />

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#BFEAEAEA"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingTop="5dp">

        <FrameLayout
            android:id="@+id/ff_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="3dp">

            <LinearLayout
                android:id="@+id/ll_txt_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="17dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:alpha=".7"
                    android:focusable="false"
                    android:text="Mahesh"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:padding="0dp">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:background="#fff"
                        android:focusable="false"
                        android:padding="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/silhouette121" />

                    <ImageButton
                        android:id="@+id/btn_download_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:src="@drawable/image_download_normal"
                        android:visibility="gone" />

                    <ProgressBar
                        android:id="@+id/progress_download_image"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:focusable="false"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>

            <com.wifin.kachingme.util.RounderImageView
                android:id="@+id/img_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="left|bottom"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:src="@drawable/ic_launcher2" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:focusable="false"
                android:text="12:12AM"
                android:textColor="@color/app_color_dark_gray"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:focusable="false"
                android:src="@drawable/receipt_from_target" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout> <!-- </merge> -->

