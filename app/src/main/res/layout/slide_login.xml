<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/slide_infoLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slide_tick1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slide_tick" />

        <TextView
            android:id="@+id/slide_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Messaging App that really Rewards You" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slide_infoLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slide_tick2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slide_tick" />

        <TextView
            android:id="@+id/slide_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More you Text,More You Earn!" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slide_infoLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slide_tick3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slide_tick" />

        <TextView
            android:id="@+id/slide_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get a Freebie, From an Advertiser for downloading" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slide_infoLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/slide_tick4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slide_tick" />

        <TextView
            android:id="@+id/slide_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experiance App Features like Never Before!" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slide_infoLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/slide_tick5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/slide_tick" />

        <TextView
            android:id="@+id/slide_text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeeL -An Offer or Discount from RetMer" />
    </LinearLayout>

    <EditText
        android:id="@+id/slide_mailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_style_red"
        android:hint="Enter email address"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textColor="@color/red"
        android:textCursorDrawable="@drawable/color_cursor"
        android:visibility="visible" />

    <TextView
        android:id="@+id/slide_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_style_black"
        android:text="Continue"
        android:textColor="@color/gray_to_black_selector"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/slide_viewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/or_bg"
        android:orientation="horizontal">

        <View
            android:id="@+id/slide_view1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/slide_txtOr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_circle"
            android:text="or"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <View
            android:id="@+id/slide_view2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@color/gray"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/slide_socialMediaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--
                <com.facebook.widget.LoginButton
                    android:id="@+id/facebook_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/facebook"
                    android:visibility="visible" />-->

        <ImageView
            android:id="@+id/facebook_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_for_fb" />

        <ImageView
            android:id="@+id/google_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_for_gplus" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/google"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>