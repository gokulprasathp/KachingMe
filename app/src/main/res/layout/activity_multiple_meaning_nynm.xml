<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nynm_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nymn_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NynM"
            android:textColor="@color/bold_header" />

        <TextView
            android:id="@+id/nymn_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_border_background"
            android:text="NynM"
            android:textColor="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nymn_meaning_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/red"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/nymn_meaning_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Meanings"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nymn_add_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:background="@drawable/add" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/meaning_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_border_background"
        android:orientation="vertical">

        <ListView
            android:id="@+id/meaning_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"></ListView>

        <LinearLayout
            android:id="@+id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nymn_meaning_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual Message"
                android:textColor="@color/bold_header" />

            <TextView
                android:id="@+id/nymn_attach_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_btn" />

            <TextView
                android:id="@+id/nymn_edit_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pencil43" />

            <TextView
                android:id="@+id/nymn_delete_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delete96" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red" />

        <LinearLayout
            android:id="@+id/layout_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nymn_meaning_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual Message"
                android:textColor="@color/bold_header" />

            <TextView
                android:id="@+id/nymn_attach_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_btn" />

            <TextView
                android:id="@+id/nymn_edit_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/pencil43" />

            <TextView
                android:id="@+id/nymn_delete_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/delete96" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red" />

        <LinearLayout
            android:id="@+id/layout_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nymn_meaning_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actual Message"
                android:textColor="@color/bold_header" />

            <TextView
                android:id="@+id/nymn_attach_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/submit_btn" />

            <TextView
                android:id="@+id/nymn_edit_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/pencil43" />

            <TextView
                android:id="@+id/nymn_delete_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:background="@drawable/delete96" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>