<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearCartListItem"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/linearCartMerchant"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvCartMerchantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Merchant"
                android:textColor="@color/merchant_name"
                android:textSize="14sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/imgCartMerchant"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/noimage" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/buxs_price_bg"/>

        <LinearLayout
            android:id="@+id/linearCartProduct"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="2"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCartProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/product_name"
                android:textSize="14sp"
                android:gravity="center_vertical|bottom"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvCartProductRegPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reg Price"
                android:textColor="@color/reg_price"
                android:textSize="14sp"
                android:gravity="center_vertical|top"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvCartProductOffer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DealName"
                android:textColor="@color/white"
                android:background="@color/product_name"
                android:textSize="14sp"
                android:paddingLeft="5dp"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/buxs_price_bg"/>

        <LinearLayout
            android:id="@+id/linearCartBuxs"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgCartBuxsProductImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/noimage"/>

            <TextView
                android:id="@+id/tvCartBuxsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DealName"
                android:textColor="@color/buxs_price"
                android:background="@color/buxs_price_bg"
                android:textSize="14sp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>