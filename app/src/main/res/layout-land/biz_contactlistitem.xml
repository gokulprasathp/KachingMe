<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" 
    android:descendantFocusability="blocksDescendants"
    >
    
    <!-- <ImageView
       android:id="@+id/avtarimg"
       android:layout_width="48dp"
      android:layout_height="48dp"
     
       android:src="@drawable/avtar" />        -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        >
        <ImageView android:layout_width="67dp"
            	android:layout_height="67dp"
            	android:src="@drawable/button"
            />
    <ImageView
       android:id="@+id/avtarimg"
       android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_gravity="center"
   
    android:layout_marginLeft="1dp"
       android:src="@drawable/avtar" />       
</FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
     android:layout_weight="1"
        android:layout_marginLeft="5dp"
       
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="fill_parent" 
            android:layout_height="wrap_content"
            >
        
        <TextView 
            android:id="@+id/name"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
            android:gravity="left"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/app_color_blue"
            android:textSize="16sp"
            android:layout_centerVertical="true"
             />
        
            <TextView 
            android:id="@+id/txt_status"
         android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="Nifty contact"
            android:textColor="@color/app_color_gray"
            android:textSize="12sp"
            android:visibility="gone" 
            android:layout_centerVertical="true"
            />
</RelativeLayout>

<!-- 
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" > -->

           
        <TextView 
            android:id="@+id/status"
     android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           android:layout_gravity="center_vertical"
            android:textColor="@color/app_color_dark_gray"
             android:textSize="15.5sp"
             android:layout_marginLeft="3dp"
             android:singleLine="true"
              android:layout_marginTop="7dp"
            android:text="dfgdfgfdfdg"/>
     <!--    </LinearLayout> -->
    </LinearLayout>
    
    
    <ImageButton
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:background="@color/Tarnsperent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="0dp"
        android:src="@drawable/ic_action_navigation_more_vert"
        android:visibility="visible" />
  

</LinearLayout>
