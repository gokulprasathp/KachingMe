<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
         >


        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Medium Text"
            android:textColor="@color/app_color_blue"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_vertical" 
            />
        
<View android:layout_height="fill_parent" 
    android:layout_width="1dp"
     android:background="@color/app_color_gray"/>
        <ImageButton
            android:id="@+id/btn_edit_subjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@drawable/image_button_style"
            
            android:src="@drawable/ic_action_content_edit" />
    </LinearLayout>

     <TextView
        android:id="@+id/txt_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/recipients"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/app_color_blue"
        android:textSize="12sp" />

    <View
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="@color/app_color_blue" 
        />
    <ListView
        android:id="@+id/list_experience"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="1px"
     android:divider="@color/list_devider" 
        android:layout_weight="5" >
    </ListView>

  

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/delete_broadcast_list" 
                android:background="#FE0000"
        />
</LinearLayout>

