<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/app_chat_notification_bg"
        android:focusable="false"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp"
        android:text="sdfsdff"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/app_color_dark_gray"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/back_date"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:background="@drawable/back"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@color/app_chat_notification_bg"
            android:focusable="false"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:text="Small Text"
            android:textAllCaps="true"
            android:textColor="@color/app_color_dark_gray"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#BFEAEAEA"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingTop="5dp" >

        <FrameLayout
            android:id="@+id/ff_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="3dp" >

            <LinearLayout
                android:id="@+id/ll_txt_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:background="#EAEAEA"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:alpha=".7"
                    android:focusable="false"
                    android:text="Mahesh"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/txt_file_name"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:marqueeRepeatLimit="2"
                            android:singleLine="true"
                            android:text="Resume.doc"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txt_file_size"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:alpha=".7"
                            android:focusable="true"
                            android:text="45 KB"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageButton
                            android:id="@+id/btn_download_file"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@color/Tarnsperent"
                            android:focusable="false"
                            android:src="@drawable/audio_download_normal"
                            android:visibility="visible" />

                        <ProgressBar
                            android:id="@+id/progress_file"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:focusable="false"
                            android:indeterminateOnly="true"
                            android:visibility="gone" />

                        <ImageButton
                            android:id="@+id/btn_view_file"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@color/Tarnsperent"
                            android:focusable="false"
                            android:src="@drawable/ic_file_download"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <com.wifin.kachingme.util.RounderImageView
                android:id="@+id/img_avatar"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="5dp"
                android:focusable="false"
                android:src="@drawable/ic_launcher33" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="20dp" >

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="5dp"
                android:focusable="false"
                android:text="12:12AM"
                android:textColor="@color/app_color_dark_gray"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/img_status"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:focusable="false"
                android:src="@drawable/receipt_from_target" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout> <!-- </merge> -->

